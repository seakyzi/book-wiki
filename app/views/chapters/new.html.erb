<div class="container">
  <h1>新章节</h1>

  <div class="row">
    <div class="span10 offset1">
      <%= form_for(@chapter) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name, "章节名称" %>
	<%= f.text_field :name%>
	<%= f.label :name, "章节简介"%>
	<%= f.text_field :description%>
	<%= f.label :name, "章节内容" %>
	<%= f.text_area :content%>
	<%= f.label :deadline, "结束时间"%>
	<%= f.date_select :deadline, class: "inline"%>

	<%= f.submit "创建章节", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
